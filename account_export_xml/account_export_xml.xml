<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
          
        <record id="view_account_export_form" model="ir.ui.view">
            <field name="name">account.export.form</field>
            <field name="model">account.export</field>
            <field name="arch" type="xml">
                <form string="ESDK">
                <header>
                    <button name="customers_xml" states="draft" string="Customer XML-file" type="object" class="oe_highlight"/>
                    <button name="invoices_xml" states="draft" string="Invoices XML-file" type="object" class="oe_highlight"/>
                    <button name="moves_xml" states="draft" string="Moves XML-file" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" nolabel="1" />
                </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>       
                        </group>
                        <group>
                            <field name="period_start"/>
                            <field name="period_end"/>
                           <!-- <field name="period_ids" widget="many2many_tags"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Note">
                            <field name="description" cols="4" nolabel="1"/>
                        </page>
                    </notebook>

                </form>
            </field>
        </record>
        <record id="view_account_export_tree" model="ir.ui.view">
            <field name="name">account.export.tree</field>
            <field name="model">account.export</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'done' " string="Esdk">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_account_export_search" model="ir.ui.view">
            <field name="name">account.export.search</field>
            <field name="model">account.export</field>
            <field name="arch" type="xml">
                <search string="Search Fiscalyear">
                    <field name="name" filter_domain="['|', ('name','ilike',self),]" string="eSDK"/>
                    <filter string="Open" domain="[('state','=','draft')]" icon="terp-camera_test"/>
                    <filter string="Closed" domain="[('state','=','done')]" icon="terp-dialog-close"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" context="{'group_by': 'state'}" icon="terp-stock_effects-object-colorize"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_account_export" model="ir.actions.act_window">
            <field name="name">Export XML records</field>
            <field name="res_model">account.export</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create an eSDK period.
              </p><p>
                Define your company's financial year according to your needs. A
                financial year is a period at the end of which a company's
                accounts are made up (usually 12 months). The financial year is
                usually referred to by the date in which it ends. For example,
                if a company's financial year ends November 30, 2011, then
                everything between December 1, 2010 and November 30, 2011
                would be referred to as FY 2011.
              </p>
            </field>
        </record>
        <menuitem id="next_id_23" name="E" parent="account.menu_finance_configuration" sequence="5" />
        <menuitem id="menu_action_account_export" action="action_account_export" parent="account.menu_finance_configuration"/>
        
        
    
  </data>
</openerp>
