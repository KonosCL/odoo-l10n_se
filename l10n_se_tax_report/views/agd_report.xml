<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_agd_declaration" model="ir.ui.view">
            <field name="name">arbetsgivardeklaration.form</field>
            <field name="model">account.agd.declaration</field>
            <field name="arch" type="xml">
                <form string="Arbetsgivardeklaration">
                    <header>
                        <button name="print_report" string="Skriv ut rapporten" type="object" class="oe_highlight"/>
                        <button name="create_entry" string="Skapa verifikat" type="object" class="oe_highlight"/>
                        <button name="create_eskd" string="Skapa eSKD-fil" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" clickable="True" />
                    </header>
                    <sheet>
<!--
                        <div class="oe_right oe_button_box" name="buttons">
                          <button type="object" class="oe_stat_button" id="momsutg_button" icon="fa-pencil-square-o" name="show_momsutg" context="{'default_partner_id': active_id}">
                            <div class="o_form_field o_stat_info">
                              <span class="o_stat_value">
                                <field name="vat_momsutg" widget="monetary" options="{'currency_field': 'currency_id'}" />
                              </span>
                              <span class="o_stat_text">Utgående</span>
                            </div>
                          </button>
                          <button type="object" class="oe_stat_button" id="momsing_button" icon="fa-pencil-square-o" name="show_momsing" context="{'default_partner_id': active_id}">
                            <div class="o_form_field o_stat_info">
                              <span class="o_stat_value">
                                <field name="vat_momsingavdr" widget="monetary" options="{'currency_field': 'currency_id'}" />
                              </span>
                              <span class="o_stat_text">Ingående</span>
                            </div>
                          </button>
                        </div>
-->
                        <div class="oe_title">
                          <label for="name" class="oe_edit_only" />
                          <h1>
                            <field name="name" />
                          </h1>
                        </div>
                        <group string="Arbetsgivardeklaration" col="4">
                            <field name="date"/>
                            <field name="fiscalyear_id"/>
                            <field name="target_move"/>
                            <field name="period" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                            <field name="free_text"/>
                        </group>
                        <group col="3">
                            <field name="baskonto"/>
                            <button icon="fa-book" string="Visa Verifikat" help="Visa Verifikat" type="object" name="show_account_moves"/>
                            <field name="agavgpres"/>
                            <button icon="fa-book" string="Visa Verifikat" help="Visa Verifikat" type="object" name="show_journal_items"/>
                        </group>
                        <group col="3">
                            <field name="move_id"/>
                            <button icon="fa-book" string="Visa Verifikat" help="Visa Verifikat" type="object" name="show_entry"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_agd_calendar" model="ir.ui.view">
            <field name="name">arbetsgivardeklaration.cal</field>
            <field name="model">agd.declaration</field>
            <field name="arch" type="xml">
                <calendar date_start="date" string="Momsdeklaration" mode="month">
                    <field name="name"/>
                    <field name="fiscalyear_id"/>
                    <field name="period"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>
        
        <record id="action_account_agd_declaration" model="ir.actions.act_window">
            <field name="name">Arbetsgivardeklaration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">agd.declaration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="target">current</field>
        </record>

        <menuitem
            name="Arbetsgivardeklaration"
            parent="account.menu_finance_legal_statement"
            action="action_account_agd_declaration"
            id="menu_account_agd_declaration"
            groups="account.group_account_user,account.group_account_manager"/>

    </data>
</odoo>
