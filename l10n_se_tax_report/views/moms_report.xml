<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_account_moms_declaration" model="ir.ui.view">
      <field name="name">momsdeklaration.form</field>
      <field name="model">account.vat.declaration</field>
      <field name="arch" type="xml">
        <form string="Momsdeklaration">
          <header>
            <button name="create_report" string="Skriv ut rapporten" type="object" class="oe_highlight" />
            <button name="create_entry" string="Skapa verifikat" type="object" class="oe_highlight" />
            <button name="create_eskd" string="Skapa eSKD-fil" type="object" class="oe_highlight" />
            <field name="state" widget="statusbar" clickable="True" />
          </header>
          <sheet>
            <div class="oe_right oe_button_box" name="buttons">
              <button type="object" class="oe_stat_button" id="momsutg_button" icon="fa-level-up" name="show_momsutg" context="{'default_partner_id': active_id}">
                <div class="o_form_field o_stat_info">
                  <span class="o_stat_value">
                    <field name="vat_momsutg" widget="monetary" options="{'currency_field': 'currency_id'}" />
                  </span>
                  <span class="o_stat_text">Utgående</span>
                </div>
              </button>
              <button type="object" class="oe_stat_button" id="momsing_button" icon="fa-level-down" name="show_momsingavdr" context="{'default_partner_id': active_id}">
                <div class="o_form_field o_stat_info">
                  <span class="o_stat_value">
                    <field name="vat_momsingavdr" widget="monetary" options="{'currency_field': 'currency_id'}" />
                  </span>
                  <span class="o_stat_text">Ingående</span>
                </div>
              </button>
            </div>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group col="4">
              <field name="date" />
              <newline />
              <field name="target_move" />
              <field name="accounting_method" />
              <field name="fiscalyear_id" /><newline/>
              <field name="period_start" domain="[('fiscalyear_id', '=', fiscalyear_id)]" />
              <field name="period_stop" domain="[('fiscalyear_id', '=', fiscalyear_id)]" />
            </group>
            <group col="3">
              <field name="vat_momsbetala" />
                              <div class="oe_button_box" name="buttons">
                  <button type="object" class="oe_stat_button" id="15xx_button" icon="fa-level-up" name="show_15xx" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c15xx_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">Kundfordr</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="30xx_button" icon="fa-level-up" name="show_30xx" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c30xx_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">Försäljning</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="244x_button" icon="fa-level-up" name="show_30xx" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c244x_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">Levfordr</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="5x6x_button" icon="fa-level-up" name="show_5x6x" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c5x6x_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">Kostnader</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="19xx_button" icon="fa-level-up" name="show_19xx" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c19xx_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">Kontorörelser</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="2640_button" icon="fa-level-up" name="show_2640" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c2640_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">Ingående</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="2630_button" icon="fa-level-up" name="show_2630" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c2630_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">6% Utgående</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="2620_button" icon="fa-level-up" name="show_2620" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c2620_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">12% Utgående</span>
                    </div>
                  </button>
                  <button type="object" class="oe_stat_button" id="2610_button" icon="fa-level-up" name="show_2610" context="{'default_period_start': period_start,'default_period_stop': period_stop,'default_target_move': target_move}">
                    <div class="o_form_field o_stat_info">
                      <span class="o_stat_value">
                        <field name="c2610_sum" widget="monetary" options="{'currency_field': 'currency_id'}" />
                      </span>
                      <span class="o_stat_text">25% Utgående</span>
                    </div>
                  </button>
                </div>

            </group>
            <group>
              <field name="report_file" />
              <field name="move_id" />
              <field name="eskd_file" />
            </group>
            <notebook>
              <page string="Upplysningstext">
                <field name="free_text" nolabel="1" />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>
    <record id="view_moms_filter" model="ir.ui.view">
      <field name="name">account.vat.declaration.filter</field>
      <field name="model">account.vat.declaration</field>
      <field name="arch" type="xml">
        <search string="Search VAT Declaration">
          <field name="name" />
          <field name="fiscalyear_id" />
          <field name="period_start" />
          <field name="period_stop" />
          <field name="date" string="Date" />
          <field name="state" string="State" />
          <separator />
          <filter string="Progress" name="state_progress" domain="[('state', '=', 'progress')]" />
          <separator />
          <group expand="0" string="Group By">
            <filter string="State" domain="[]" context="{'group_by': 'state'}" />
            <filter string="Fiscalyear" domain="[]" context="{'group_by': 'fiscalyear_id'}" />
            <filter string="Period" domain="[]" context="{'group_by': 'period_start'}" />
          </group>
        </search>
      </field>
    </record>
    <record id="view_moms_tree" model="ir.ui.view">
      <field name="name">account.vat.declaration.tree</field>
      <field name="model">account.vat.declaration</field>
      <field name="arch" type="xml">
        <tree string="Momsdeklaration">
          <field name="name" />
          <field name="date" />
          <field name="fiscalyear_id" />
          <field name="period_start" />
          <field name="state" />
        </tree>
      </field>
    </record>
    <record id="view_moms_calendar" model="ir.ui.view">
      <field name="name">account.vat.declaration.cal</field>
      <field name="model">account.vat.declaration</field>
      <field name="arch" type="xml">
        <calendar date_start="date" string="Momsdeklaration">
          <field name="name" />
          <field name="fiscalyear_id" />
          <field name="period_start" />
          <field name="state" />
        </calendar>
      </field>
    </record>
    <record id="action_account_moms_declaration" model="ir.actions.act_window">
      <field name="name">Momsdeklaration</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.vat.declaration</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,calendar</field>
      <field name="search_view_id" ref="view_moms_filter" />
    </record>
    <menuitem name="Momsdeklaration" parent="account.menu_finance_legal_statement" action="action_account_moms_declaration" id="menu_account_moms_declaration" groups="account.group_account_user,account.group_account_manager" />
  </data>
</odoo>